random_orifice_vore_effect = { prison_type = $prison_type$ } # Decides randomly between lethal and non-lethal vore. Calls random_orifice_$lethality$_vore_effect

random_orifice_safe_vore_effect = { prison_type = $prison_type$ } # Activates a safe vore effect using a random orifice

random_orifice_lethal_vore_effect = { prison_type = $prison_type$ } # Activates a lethal vore effect using a random orifice

safe_vore_effect = { type = $type$ prison_type = $prison_type$ } # Activtes a safe vore effect on scope:predator and scope:prey.

lethal_vore_effect = { type = $type$ } # Activates a lethal vore effect and starts a story cycle. Triggers event vore.0002 after a period of time

release_prey_location_check_effect = yes # Checks the prey to see where they are located and then calls the release_prey_effect

release_prey_effect = yes # Removes all necessary traits, variables, and flags from pred and prey

finish_digesting_effect = yes # Removes all necessary flags, traits, and variables from predator, and is activated by the digestion story cycle

update_vore_portrait = yes # If final descision is using clothing for the belly, this updates which belly should be used

simulate_npc_vore_effect = yes # Lightweight function to give the pred all the necessary aspects needed for vore without needing a prey character

clean_up_effect = yes # Removes any temporary variables and clears the scopes.

exit_clean_up_effect = yes # Used when backing out of a vore descision to clear the scopes

