# 1. Defense & Setup
on_vore_defensive_check = {
    # Initializes global game rules and content restrictions (like banning specific vore types) 
    # if they haven't been set yet.
}

on_add_vore_toggles = {
    # Sets up the initial state for all adult characters by granting capabilities and randomizing stats, 
    # and handles mass religious conversion for followers of the Voraphillic faith.
}

# 2. Combined Quarterly Pulse
on_vore_quarterly_pulse = {
    # Quarterly checks for unwilling prisoners of the faith, giving them a chance to 
    # convert to their predator's religion over time.
}

# 3. Travel Events
on_vore_travel_events = {
    # Reserved for random events that occur while a character is traveling.
}

on_vore_sea_events = {
    # Reserved for random events that occur during sea travel (currently disabled).
}

# 4. Combat Events
on_vore_battle_events = {
    # Triggers at the end of battles, giving winning commanders a chance to consume 
    # defeated enemies as either lethal or non-lethal prey.
}

# 5. Death Handler
on_vore_death_handler = {
    # Handles the cleanup process when a character dies, ensuring all prey are released 
    # if their predator dies, or the predator is notified if the prey dies inside them.
}

on_release_prey_from_prison = {
    # A utility action used to properly scope the predator and execute the release logic 
    # when a prey character is freed.
}

# 6. Birthday
on_vore_18th_birthday_gift = {
    # Initializes vore-related stats and capabilities for characters as soon as they reach adulthood (age 18).
}

